<%= form_for Contact.new, 'class' => 'form-horizontal' do |f| %>
	<div class='modal' id='contact' role='dialog'>
		<div class='modal-dialog'>
			<div class='modal-content'>
				<div class='modal-header'>
					<h3> Contact form </h3>
				</div>
				<div class='modal-body'>
					<div class='form-group'>
						<%= f.email_field :email, class: 'form-control', placeholder: 'Type here your email', require: true %>
					</div>
					<div class='form-group'>
						<%= f.text_area :message, class: 'form-control', placeholder: 'Type your message...', required: true %>
					</div>
				</div>
				<div class='modal-footer'>
					<%= link_to 'Close', '#',
						'data-dismiss' => 'modal',
						class: 'btn btn-default' %>
					<%= button_to 'Send message', '#',
						class: 'btn btn-primary' %>
				</div>
			</div>
		</div>
	</div>
<% end %>
